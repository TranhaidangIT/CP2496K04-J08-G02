<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.layout.StackPane?>

<StackPane fx:controller="controller.controllerAdmin.DashboardOverviewController" alignment="CENTER"
           xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           stylesheets="@../css/dashboard-overview.css">

    <VBox alignment="TOP_CENTER" spacing="20.0" styleClass="light-gray-background">
        <padding>
            <Insets top="30.0" left="20.0" right="20.0" bottom="20.0"/>
        </padding>
        <children>

            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label styleClass="bold-label" text="Dashboard Overview" />
                <Region HBox.hgrow="ALWAYS" />
            </HBox>

            <Label text="Welcome to the Admin Panel!" styleClass="bold-label" />
            <Label text="Here's a quick summary of your cinema's performance:" />

            <HBox alignment="CENTER" spacing="30.0">
                <VBox alignment="CENTER" styleClass="card-base, users-card" prefHeight="120.0" prefWidth="180.0">
                    <children>
                        <Label text="Total Users" styleClass="card-title" />
                        <Label fx:id="totalUsersLabel" text="1200" styleClass="card-value" />
                    </children>
                </VBox>
                <VBox alignment="CENTER" styleClass="card-base, tickets-card" prefHeight="120.0" prefWidth="180.0">
                    <children>
                        <Label text="Tickets Sold Today" styleClass="card-title" />
                        <Label fx:id="ticketsSoldLabel" text="150" styleClass="card-value" />
                    </children>
                </VBox>
                <VBox alignment="CENTER" styleClass="card-base, revenue-card" prefHeight="120.0" prefWidth="180.0">
                    <children>
                        <Label text="Today's Revenue" styleClass="card-title" />
                        <Label fx:id="totalRevenueLabel" text="0 VND" styleClass="card-value" />
                    </children>
                </VBox>
            </HBox>

            <BarChart fx:id="dailyRevenueChart" title="Daily Revenue" VBox.vgrow="ALWAYS">
                <xAxis>
                    <CategoryAxis label="Day" fx:id="xAxisDailyRevenue" />
                </xAxis>
                <yAxis>
                    <NumberAxis label="Revenue (VNÄ)" fx:id="yAxisDailyRevenue" />
                </yAxis>
            </BarChart>

            <Label text="This is a summary. Click on sidebar options for details." styleClass="small-text" />
        </children>
    </VBox>
</StackPane>