<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>

<StackPane alignment="CENTER" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
           stylesheets="@../css/dashboard-overview.css">

    <VBox alignment="TOP_CENTER" spacing="20.0" styleClass="light-gray-background">
        <padding>
            <Insets top="30.0" left="20.0" right="20.0" bottom="20.0"/>
        </padding>
        <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <Label styleClass="bold-label" text="Dashboard Overview" />
                <Region HBox.hgrow="ALWAYS" />
            </HBox>

            <Label text="Welcome to the Admin Panel!" styleClass="bold-label" />
            <Label text="Here's a quick summary of your cinema's performance:" />

            <HBox alignment="CENTER" spacing="30.0" VBox.vgrow="ALWAYS">
                <VBox alignment="CENTER" styleClass="card-base, tickets-card" prefHeight="120.0" prefWidth="180.0">
                    <children>
                        <Label text="Total Users" styleClass="card-title" />
                        <Label text="1200" styleClass="card-value" />
                    </children>
                </VBox>
                <VBox alignment="CENTER" styleClass="card-base, tickets-card" prefHeight="120.0" prefWidth="180.0">
                    <children>
                        <Label text="Tickets Sold Today" styleClass="card-title" />
                        <Label text="150" styleClass="card-value" />
                    </children>
                </VBox>
                <VBox alignment="CENTER" styleClass="card-base, revenue-card" prefHeight="120.0" prefWidth="180.0">
                    <children>
                        <Label text="Revenue Today" styleClass="card-title" />
                        <Label text="" styleClass="card-value" />
                    </children>
                </VBox>
            </HBox>
            <HBox alignment="CENTER" spacing="30.0" VBox.vgrow="ALWAYS">
                <VBox alignment="CENTER" styleClass="card-base, movies-card" prefHeight="120.0" prefWidth="180.0">
                    <children>
                        <Label text="Upcoming Movies" styleClass="card-title" />
                        <Label text="5" styleClass="card-value" />
                    </children>
                </VBox>
                <VBox alignment="CENTER" styleClass="card-base, movies-card" prefHeight="120.0" prefWidth="180.0">
                    <children>
                        <Label text="Active Showtimes" styleClass="card-title" />
                        <Label text="30" styleClass="card-value" />
                    </children>
                </VBox>
            </HBox>
            <Label text="This is a summary. Click on sidebar options for details." styleClass="small-text" />
        </children>
    </VBox>
</StackPane>