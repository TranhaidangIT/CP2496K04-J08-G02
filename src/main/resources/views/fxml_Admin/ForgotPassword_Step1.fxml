<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.controllerAdmin.ForgotPasswordController" prefWidth="924" prefHeight="672"
            style="-fx-background-color: #ECECEC;">

    <AnchorPane prefWidth="412" prefHeight="672"
                style="-fx-background-color: #C00000;"
                AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
        <VBox alignment="CENTER" spacing="20" prefWidth="412" prefHeight="672">
            <FontIcon iconLiteral="fas-user" iconSize="150" fill="black"/>
            <Label text="Welcome to the Cinema Management&#10;Xuan Khanh CGV"
                   wrapText="true"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-family: 'Lexend';"
                   maxWidth="300"
                   textAlignment="CENTER"/>
        </VBox>
    </AnchorPane>

    <AnchorPane prefWidth="512" prefHeight="672"
                AnchorPane.leftAnchor="412.0" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0">
        <VBox spacing="15" alignment="TOP_CENTER" prefWidth="512" prefHeight="672"
              style="-fx-padding: 160 40 40 40;">
            <Label text="Xác minh thông tin"
                   style="-fx-text-fill: #C00000; -fx-font-size: 28px; -fx-font-weight: bold; -fx-font-family: 'Arial';"/>

            <Label text="Vui lòng nhập các thông tin sau để xác minh tài khoản."
                   wrapText="true"
                   style="-fx-text-fill: #666666; -fx-font-size: 14px; -fx-text-alignment: center;"
                   maxWidth="350"/>

            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-background-radius: 30; -fx-padding: 12 15;">
                <FontIcon iconLiteral="fas-id-card" iconSize="20" fill="gray"/>
                <TextField fx:id="employeeIdField" promptText="Nhập ID nhân viên" prefWidth="300" style="-fx-background-color: transparent; -fx-prompt-text-fill: gray; -fx-font-size: 15px;"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-background-radius: 30; -fx-padding: 12 15;">
                <FontIcon iconLiteral="fas-user" iconSize="20" fill="gray"/>
                <TextField fx:id="usernameField" promptText="Nhập tên đăng nhập" prefWidth="300" style="-fx-background-color: transparent; -fx-prompt-text-fill: gray; -fx-font-size: 15px;"/>
            </HBox>

            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-background-color: white; -fx-background-radius: 30; -fx-padding: 12 15;">
                <FontIcon iconLiteral="fas-envelope" iconSize="20" fill="gray"/>
                <TextField fx:id="emailField" promptText="Nhập email" prefWidth="300" style="-fx-background-color: transparent; -fx-prompt-text-fill: gray; -fx-font-size: 15px;"/>
            </HBox>

            <Button text="Xác minh" onAction="#handleVerifyUser"
                    style="-fx-background-color: #C00000; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 35; -fx-font-size: 18px;"/>
        </VBox>
    </AnchorPane>
</AnchorPane>