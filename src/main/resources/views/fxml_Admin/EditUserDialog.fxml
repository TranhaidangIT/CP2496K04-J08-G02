<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.controllerAdmin.EditUserDialogController">
    <padding>
        <Insets top="20.0" right="20.0" bottom="20.0" left="20.0"/>
    </padding>
    <Label text="Edit User" styleClass="dialog-title"/>
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Username" prefWidth="80.0" />
        <TextField fx:id="usernameField" prefWidth="150.0" />
    </HBox>
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Full Name" prefWidth="80.0" />
        <TextField fx:id="fullNameField" prefWidth="150.0" />
    </HBox>
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Email" prefWidth="80.0" />
        <TextField fx:id="emailField" prefWidth="150.0" />
    </HBox>
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Password" prefWidth="80.0" />
        <PasswordField fx:id="passwordField" prefWidth="150.0" />
    </HBox>
    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <Label text="Role" prefWidth="80.0" />
        <Label fx:id="roleLabel" prefWidth="150.0" />
    </HBox>
    <HBox alignment="CENTER" spacing="10.0">
        <Button text="Save" onAction="#handleSave" />
        <Button text="Cancel" onAction="#handleCancel" />
    </HBox>
</VBox>