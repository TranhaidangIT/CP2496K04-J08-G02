<AnchorPane prefHeight="768.0" prefWidth="1229.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.controllerAdmin.MovieManagementController"
            stylesheets="@../../css/dashboard.css">

    <AnchorPane prefHeight="768.0" prefWidth="333.0" styleClass="red-sidebar" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
