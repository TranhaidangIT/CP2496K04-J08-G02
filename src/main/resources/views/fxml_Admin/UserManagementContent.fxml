<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="700.0" prefWidth="750.0" styleClass="light-gray-background" stylesheets="@../../css/app-style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.controllerAdmin.UserController">
    <children>
        <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="200.0" spacing="10.0">
            <children>
                <Label styleClass="titleMain" text="Manage Users">
                    <HBox.margin>
                        <Insets left="0.0" />
                    </HBox.margin>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Label prefHeight="22.0" prefWidth="42.0" text="Search">
               <font>
                  <Font size="14.0" />
               </font></Label>
                <TextField fx:id="searchField" prefHeight="40.0" prefWidth="250.0" promptText="Enter keyword..." styleClass="textField" />
                <Button mnemonicParsing="false" onAction="#handleSearch" prefHeight="35.0" styleClass="btnFind" text="Search" />
                <Button fx:id="addNewButton" mnemonicParsing="false" onAction="#handleAddNew" prefHeight="35.0" prefWidth="100.0" styleClass="btnInsert" text="Add New" />
            </children>
            <VBox.margin>
                <Insets left="20.0" right="20.0" />
            </VBox.margin>
        </HBox>

        <TableView fx:id="userTable" prefHeight="300.0" prefWidth="710.0">
            <columns>
                <TableColumn fx:id="idCol" prefWidth="50.0" text="Employee ID" />
                <TableColumn fx:id="usernameCol" prefWidth="120.0" text="Username" />
                <TableColumn fx:id="fullNameCol" prefWidth="150.0" text="Full Name" />
                <TableColumn fx:id="emailCol" prefWidth="150.0" text="Email" />
                <TableColumn fx:id="roleCol" prefWidth="100.0" text="Role" />
                <TableColumn fx:id="editCol" prefWidth="165.0" text="Edit" />
                <TableColumn fx:id="deleteCol" prefWidth="165.0" text="Delete" />
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <VBox.margin>
                <Insets left="20.0" right="20.0" />
            </VBox.margin>
        </TableView>
    </children>
</VBox>
