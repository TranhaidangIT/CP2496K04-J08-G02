<?xml version="1.0" encoding="UTF-8"?>

<!-- JavaFX Imports -->
<?import java.net.URL?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="768.0" prefWidth="1124.0" stylesheets="@../../../css/manager.css"
            xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.controllerManager.MovieListController">

    <!-- ========================= LEFT PANEL: Movie Form ========================= -->
    <AnchorPane layoutX="14.0" layoutY="9.0" prefHeight="749.0" prefWidth="626.0" styleClass="bg-white">

        <!-- Movie Poster Image -->
        <AnchorPane layoutX="19.0" layoutY="34.0" prefHeight="293.0" prefWidth="194.0">
            <ImageView fx:id="posterImage" fitHeight="293.0" fitWidth="198.0" pickOnBounds="true" preserveRatio="true">
                <image>
                    <Image url="@../../../icon/default_poster.jpg"/>
                </image>
            </ImageView>
        </AnchorPane>

        <!-- Edit Button -->
        <Button fx:id="btnEdit" layoutX="516.0" layoutY="689.0" onAction="#openEditMovieForm"
                prefHeight="35.0" prefWidth="100.0" styleClass="btnEdit"
                stylesheets="@../../../css/app-style.css" text="Edit"/>

        <!-- Movie Detail Fields (Read-only) -->
        <AnchorPane layoutX="221.0" layoutY="24.0" prefHeight="391.0" prefWidth="394.0" stylesheets="@../../../css/app-style.css">
            <children>
                <!-- Title -->
                <Label layoutX="35.0" layoutY="19.0" text="Movie Title:">
                    <font><Font size="16.0"/></font>
                </Label>
                <TextField fx:id="txtTitle" layoutX="124.0" layoutY="6.0"
                           prefHeight="26.0" prefWidth="250.0" styleClass="textField"
                           editable="false"/>

                <!-- Directed By -->
                <Label layoutX="35.0" layoutY="69.0" text="Directed by:">
                    <font><Font size="16.0"/></font>
                </Label>
                <TextField fx:id="txtDirectedby" layoutX="124.0" layoutY="56.0"
                           prefHeight="26.0" prefWidth="250.0" styleClass="textField"
                           editable="false"/>

                <!-- Age Rating -->
                <Label layoutX="35.0" layoutY="121.0" text="Age Rating:">
                    <font><Font size="16.0"/></font>
                </Label>
                <ComboBox fx:id="cbAgeRating" layoutX="125.0" layoutY="108.0"
                          prefHeight="40.0" prefWidth="250.0" styleClass="comboBox"
                          disable="true"/>

                <!-- Genre -->
                <Label layoutX="66.0" layoutY="183.0" text="Genre:">
                    <font><Font size="16.0"/></font>
                </Label>
                <ComboBox fx:id="cbGenre" layoutX="125.0" layoutY="170.0"
                          prefWidth="250.0" styleClass="comboBox"
                          disable="true"/>

                <!-- Duration -->
                <Label layoutX="14.0" layoutY="238.0" text="Duration (min):">
                    <font><Font size="16.0"/></font>
                </Label>
                <TextField fx:id="txtDuration" layoutX="127.0" layoutY="231.0"
                           prefHeight="26.0" prefWidth="250.0" styleClass="textField"
                           editable="false"/>

                <!-- Language -->
                <Label layoutX="44.0" layoutY="293.0" text="Language:">
                    <font><Font size="16.0"/></font>
                </Label>
                <ComboBox fx:id="cbLanguage" layoutX="129.0" layoutY="280.0"
                          prefWidth="250.0" styleClass="comboBox"
                          disable="true"/>

                <!-- Release Date -->
                <Label layoutX="22.0" layoutY="352.0" text="Release Date:">
                    <font><Font size="16.0"/></font>
                </Label>
                <DatePicker fx:id="datePicker" layoutX="129.0" layoutY="339.0"
                            prefHeight="26.0" prefWidth="250.0" styleClass="datePicker"
                            disable="true"/>
            </children>
        </AnchorPane>

        <!-- Description Field (Read-only) -->
        <AnchorPane layoutX="10.0" layoutY="430.0" prefHeight="230.0" prefWidth="606.0"
                    stylesheets="@../../../css/app-style.css">
            <children>
                <Label layoutY="6.0" styleClass="labelCaption" text="Description:">
                    <font><Font size="16.0"/></font>
                </Label>
                <TextArea fx:id="txtDescription" layoutY="43.0" prefHeight="186.0"
                          prefWidth="606.0" styleClass="textField"
                          editable="false"/>
            </children>
        </AnchorPane>
    </AnchorPane>

    <!-- ========================= RIGHT PANEL ========================= -->

    <!-- Add New Movie Button -->
    <Button fx:id="btnAdd" layoutX="651.0" layoutY="9.0" onAction="#handleAddNewMovie"
            prefHeight="63.0" prefWidth="458.0" styleClass="bg-white" text="Add New Movie"
            textFill="GREEN">
        <font><Font name="System Bold" size="16.0"/></font>
        <graphic>
            <ImageView fitHeight="35.0" fitWidth="31.0" preserveRatio="true">
                <image>
                    <Image url="@../../../icon/add_to_queue.png"/>
                </image>
            </ImageView>
        </graphic>
    </Button>

    <!-- Movie Table Section -->
    <AnchorPane layoutX="651.0" layoutY="84.0" prefHeight="671.0" prefWidth="458.0" styleClass="bg-white">
        <!-- TableView of Movies -->
        <TableView fx:id="tblMovies" layoutY="74.0" onMouseClicked="#handleTableClick"
                   prefHeight="595.0" prefWidth="466.0">
            <columns>
                <TableColumn fx:id="colId" text="ID" prefWidth="50.0"/>
                <TableColumn fx:id="colTitle" text="Title"/>
                <TableColumn fx:id="colGenre" text="Genre"/>
                <TableColumn fx:id="colDuration" prefWidth="129.6" text="Duration"/>
                <TableColumn fx:id="colReleaseDate" prefWidth="171.2" text="Release Date"/>
            </columns>
        </TableView>

        <!-- Find Section -->
        <Button fx:id="btnFind" layoutX="377.0" layoutY="14.0" prefHeight="26.0" prefWidth="74.0"
                styleClass="btnFind" text="Find">
            <stylesheets>
                <URL value="@../../../css/manager.css"/>
                <URL value="@../../../css/app-style.css"/>
            </stylesheets>
        </Button>

        <!-- Search Input -->
        <AnchorPane layoutX="111.0" layoutY="14.0" prefHeight="42.0" prefWidth="257.0"
                    styleClass="search-bar" stylesheets="@../../../css/manager.css">
            <children>
                <TextField layoutX="23.0" layoutY="2.0" prefHeight="40.0" prefWidth="211.0"
                           styleClass="search-barTextField"/>
            </children>
        </AnchorPane>
    </AnchorPane>
</AnchorPane>
