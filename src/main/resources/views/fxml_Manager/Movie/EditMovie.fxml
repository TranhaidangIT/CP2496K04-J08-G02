<AnchorPane prefHeight="768.0" prefWidth="629.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.controllerManager.EditMovieController">
    <children>
        <AnchorPane layoutX="8.0" layoutY="7.0" prefHeight="755.0" prefWidth="600.0" styleClass="bg-white" stylesheets="@../../../css/manager.css">
            <children>
                <Label layoutX="227.0" layoutY="14.0" text=" Edit Movie" textFill="#aa0000">
                    <font><Font name="System Bold" size="24.0" /></font>
                </Label>

                <ImageView fx:id="imgPreview" fitHeight="293.0" fitWidth="219.0" layoutX="14.0" layoutY="72.0" pickOnBounds="true" preserveRatio="true">
                    <image><Image url="@../../../icon/default.png" /></image>
                </ImageView>

                <!-- Description -->
                <AnchorPane layoutX="14.0" layoutY="448.0" prefHeight="202.0" prefWidth="593.0" stylesheets="@../../../css/app-style.css">
                    <children>
                        <Label layoutY="6.0" styleClass="labelCaption" text="Descripton:">
                            <font><Font size="16.0" /></font>
                        </Label>
                        <TextArea fx:id="descriptionTextArea" layoutY="43.0" prefHeight="119.0" prefWidth="591.0" styleClass="textField" wrapText="true" />
                    </children>
                </AnchorPane>

                <!-- Buttons -->
                <Button fx:id="btnCancel" layoutX="504.0" layoutY="708.0" mnemonicParsing="false" onAction="#handleCancel" prefHeight="35.0" prefWidth="100.0" styleClass="btnCancel" stylesheets="@../../../css/app-style.css" text="Cancel">
                    <font><Font size="16.0" /></font>
                </Button>

                <Button fx:id="btnDelete" layoutX="380.0" layoutY="708.0" mnemonicParsing="false" onAction="#handleDelete" prefHeight="35.0" prefWidth="100.0" styleClass="btnDelete" stylesheets="@../../../css/app-style.css" text="Delete">
                    <font><Font size="16.0" /></font>
                </Button>

                <Button fx:id="btnUpdate" layoutX="257.0" layoutY="708.0" mnemonicParsing="false" onAction="#handleUpdate" prefHeight="35.0" prefWidth="100.0" styleClass="btnEdit" stylesheets="@../../../css/app-style.css" text="Update">
                    <font><Font size="16.0" /></font>
                </Button>

            <AnchorPane layoutX="219.0" layoutY="72.0" prefHeight="391.0" prefWidth="394.0" stylesheets="@../../../css/app-style.css">
               <children>
                  <VBox layoutX="10.0" layoutY="7.0" prefHeight="398.0" prefWidth="373.0" spacing="10.0">
                     <children>
                        <HBox prefHeight="40.0" prefWidth="0.0" spacing="10.0">
                           <children>
                              <Label alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="110.0" styleClass="labelCaption" text="Movie Title:">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtTitle" prefHeight="40.0" prefWidth="250.0" styleClass="textField" />
                           </children>
                        </HBox>
                        <HBox prefHeight="40.0" prefWidth="0.0" spacing="10.0">
                           <children>
                              <Label alignment="CENTER_RIGHT" prefHeight="40.0" prefWidth="110.0" styleClass="labelCaption" text="Directed by:">
                                 <font>
                                    <Font size="16.0" />
                                 </font>
                              </Label>
                              <TextField fx:id="txtDirectedby" prefHeight="40.0" prefWidth="250.0" styleClass="textField" />
                           </children>
                        </HBox>
