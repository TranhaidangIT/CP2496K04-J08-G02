                    </Label>
                    <Label layoutX="10.0" layoutY="20.0" text="after ensuring all stored items have been properly retrieved." textFill="#856404">
                        <font><Font size="12.0" /></font>
                    </Label>
                </AnchorPane>

                <!-- Buttons -->
                <Button fx:id="btnCancel" layoutX="426.0" layoutY="350.0" mnemonicParsing="false" onAction="#handleCancel" prefHeight="35.0" prefWidth="100.0" styleClass="btnCancel" stylesheets="@../../../css/app-style.css" text="Cancel">
                    <font><Font size="16.0" /></font>
                </Button>

                <Button fx:id="btnDelete" layoutX="317.0" layoutY="350.0" mnemonicParsing="false" onAction="#handleDelete" prefHeight="35.0" prefWidth="100.0" styleClass="btnDelete" stylesheets="@../../../css/app-style.css" text="Delete">
                    <font><Font size="16.0" /></font>
                </Button>

                <Button fx:id="btnUpdate" layoutX="209.0" layoutY="350.0" mnemonicParsing="false" onAction="#handleUpdate" prefHeight="35.0" prefWidth="100.0" styleClass="btnEdit" stylesheets="@../../../css/app-style.css" text="Update">
                    <font><Font size="16.0" /></font>
                </Button>
            </children>
        </AnchorPane>
    </children>
