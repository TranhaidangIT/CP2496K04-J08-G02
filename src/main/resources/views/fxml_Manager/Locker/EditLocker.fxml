<AnchorPane prefHeight="410.0" prefWidth="550.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.controllerManager.EditLockerController">
    <children>
        <AnchorPane layoutX="4.0" layoutY="6.0" prefHeight="400.0" prefWidth="540.0" styleClass="bg-white" stylesheets="@../../../css/manager.css">
            <children>
                <Label layoutX="215.0" layoutY="14.0" text="Edit Locker" textFill="#aa0000">
                    <font><Font name="System Bold" size="24.0" /></font>
                </Label>

                <AnchorPane layoutX="70.0" layoutY="79.0" prefHeight="150.0" prefWidth="400.0" stylesheets="@../../../css/app-style.css">
                    <children>
                        <Label layoutX="35.0" layoutY="10.0" styleClass="labelCaption" text="Locker Number:">
                            <font><Font size="16.0" /></font>
                        </Label>
                        <TextField fx:id="txtLockerNumber" layoutX="150.0" layoutY="6.0" prefHeight="40.0" prefWidth="250.0" styleClass="textField" />

                        <Label layoutX="43.0" layoutY="63.0" styleClass="labelCaption" text="Location Info:">
                            <font><Font size="16.0" /></font>
                        </Label>
                        <TextField fx:id="txtLocationInfo" layoutX="150.0" layoutY="56.0" prefHeight="40.0" prefWidth="250.0" styleClass="textField" />

                        <Label layoutX="89.0" layoutY="120.0" styleClass="labelCaption" text="Status:">
                            <font><Font size="16.0" /></font>
                        </Label>
                        <ComboBox fx:id="cbStatus" layoutX="150.0" layoutY="108.0" prefHeight="40.0" prefWidth="250.0" styleClass="comboBox" />
                    </children>
                </AnchorPane>

                <!-- Warning Text for Status Change -->
                <AnchorPane layoutX="61.0" layoutY="281.0" prefHeight="50.0" prefWidth="422.0" style="-fx-background-color: #fff3cd; -fx-border-color: #ffeaa7; -fx-border-radius: 5;">
