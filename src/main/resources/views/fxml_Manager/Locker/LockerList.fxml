<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.controllerManager.LockerListController">
    <children>
        <VBox prefHeight="412.0" prefWidth="1000.0" AnchorPane.bottomAnchor="192.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <!-- Header and Controls -->
                <HBox spacing="10" style="-fx-padding: 10;">
                    <children>
                        <Button fx:id="btnAdd" onAction="#handleAddNewLocker" text="Add New Locker" />
                        <Button fx:id="btnEdit" onAction="#openEditLockerForm" text="Edit Locker" />
                        <ComboBox fx:id="cbStatusFilter" prefWidth="150.0" />
                        <TextField fx:id="txtSearch" promptText="Search by number or location" />
                        <Button fx:id="btnFind" onAction="#handleFind" text="Find" />
                        <Button onAction="#handleClearFilter" text="Clear Filter" />
                    </children>
                </HBox>

                <!-- Locker Table -->
                <TableView fx:id="tblLockers" onMouseClicked="#handleTableClick" prefHeight="355.0" prefWidth="979.0">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="100.0" text="ID" />
                        <TableColumn fx:id="colNumber" prefWidth="150.0" text="Locker Number" />
                        <TableColumn fx:id="colLocation" prefWidth="200.0" text="Location" />
                        <TableColumn fx:id="colStatus" prefWidth="150.0" text="Status" />
                        <TableColumn fx:id="colPinCode" prefWidth="100.0" text="PIN Code" />
                    </columns>
                </TableView>
            </children>
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
        </VBox>
             <Label layoutX="43.0" layoutY="552.0" prefHeight="18.0" prefWidth="39.0" text="Status:" />
             <Label layoutX="43.0" layoutY="507.0" text="Location:" />
            <Label fx:id="selectedLockerLabel" layoutX="72.0" layoutY="586.0" text="Click on a locker to view details" />
             <TextField fx:id="txtLocationInfo" editable="false" layoutX="154.0" layoutY="504.0" prefHeight="26.0" prefWidth="150.0" />
            <Label fx:id="lblStatusInfo" layoutX="614.0" layoutY="586.0" text="Select a locker to view details" />
             <Label layoutX="43.0" layoutY="465.0" text="Locker Number:" />
             <TextField fx:id="txtLockerNumber" editable="false" layoutX="155.0" layoutY="461.0" />
             <ComboBox fx:id="cbStatus" editable="false" layoutX="155.0" layoutY="548.0" prefHeight="26.0" prefWidth="112.0" />

          <!-- Locker Grid -->
          <GridPane fx:id="lockerGrid" hgap="5" layoutX="379.0" layoutY="413.0" prefHeight="159.0" prefWidth="587.0" style="-fx-padding: 10;" vgap="5" />
    </children>
</AnchorPane>
