<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="controller.controllerManager.OverviewController"
            prefWidth="1000.0" prefHeight="768.0"
            styleClass="overviewRoot">

    <children>
        <VBox spacing="30.0" layoutX="30.0" layoutY="30.0">
            <children>

                <Label text="Dashboard Overview" styleClass="overviewTitle"/>

                <HBox spacing="20.0">
                    <children>
                        <VBox spacing="10.0" styleClass="overviewCard">
                            <Label text="Movies" styleClass="cardTitle"/>
                            <Label fx:id="movieCountLabel" text="0" styleClass="cardValue"/>
                        </VBox>

                        <VBox spacing="10.0" styleClass="overviewCard">
                            <Label text="Rooms" styleClass="cardTitle"/>
                            <Label fx:id="roomCountLabel" text="0" styleClass="cardValue"/>
                        </VBox>

                        <VBox spacing="10.0" styleClass="overviewCard">
                            <Label text="Services" styleClass="cardTitle"/>
                            <Label fx:id="serviceCountLabel" text="0" styleClass="cardValue"/>
                        </VBox>

                        <VBox spacing="10.0" styleClass="overviewCard">
                            <Label text="Employees" styleClass="cardTitle"/>
                            <Label fx:id="employeeCountLabel" text="0" styleClass="cardValue"/>
                        </VBox>
                    </children>
                </HBox>

            </children>
        </VBox>
    </children>
</AnchorPane>
