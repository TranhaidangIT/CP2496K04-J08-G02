                  <Font size="16.0" />
               </font>
            </Button>

            <Button fx:id="btnCancel" layoutX="419.0" layoutY="547.0" mnemonicParsing="false" onAction="#handleCancel" prefHeight="35.0" prefWidth="100.0" styleClass="btnCancel" stylesheets="@../../../css/app-style.css" text="Cancel">
