<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="anchorPane" prefHeight="768.0" prefWidth="950.0" style="-fx-background-color: #1e1e1e;" stylesheets="@../../../css/app-style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.controllerManager.SeatingLayoutController">

    <children>

        <!--Seat Area-->
        <AnchorPane fx:id="seatingArea" layoutX="176.0" layoutY="113.0" prefHeight="478.0" prefWidth="700.0">
            <GridPane fx:id="seatGrid" hgap="5" layoutX="50" layoutY="60" vgap="5" />
        </AnchorPane>

        <!-- Edit Button -->
        <Button fx:id="btnEditLayout" layoutX="321.0" layoutY="680.0" mnemonicParsing="false" onAction="#handleEditLayout" prefHeight="26.0" prefWidth="342.0" style="-fx-text-fill: white;" styleClass="btnEdit" stylesheets="@../../../css/manager.css" text="Edit Seating Layout">
            <graphic>
                <ImageView fitHeight="35.0" fitWidth="48.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../../icon/edit.png" />
                    </image>
                </ImageView>
            </graphic>
            <font>
                <Font name="System Bold" size="16.0" />
            </font>
        </Button>

        <!-- ===== Seat Color Legend Section ===== -->

        <!-- Legend Title -->
        <Label layoutX="149.0" layoutY="608.0" style="-fx-text-fill: white;" styleClass="titleSub" text="Seat Legend:" textFill="white">
            <font>
                <Font size="14" />
            </font>
        </Label>

        <!-- Standard -->
        <AnchorPane fx:id="legendStandardColor" layoutX="270.0" layoutY="613.0" prefHeight="16" prefWidth="16" style="-fx-background-color: #ff69b4; -fx-border-color: white;" />
        <Label fx:id="legendStandardLabel" layoutX="295.0" layoutY="613.0" style="-fx-text-fill: white; -fx-font-weight: normal;" styleClass="labelCaption" text="Standard" textFill="white" />

        <!-- VIP -->
        <AnchorPane fx:id="legendVIPColor" layoutX="362.0" layoutY="612.0" prefHeight="16" prefWidth="16" style="-fx-background-color: #00bfff; -fx-border-color: white;" />
        <Label fx:id="legendVIPLabel" layoutX="392.0" layoutY="612.0" style="-fx-text-fill: white; -fx-font-weight: normal;" styleClass="labelCaption" text="VIP" textFill="white" />

        <!-- SweetBox -->
        <AnchorPane fx:id="legendSweetboxColor" layoutX="430.0" layoutY="613.0" prefHeight="16" prefWidth="16" style="-fx-background-color: #dc3545; -fx-border-color: white;" />
        <Label fx:id="legendSweetboxLabel" layoutX="460.0" layoutY="613.0" style="-fx-text-fill: white; -fx-font-weight: normal;" styleClass="labelCaption" text="SweetBox" textFill="white" />

        <!-- Gold -->
        <AnchorPane fx:id="legendGoldColor" layoutX="247.0" layoutY="610.0" prefHeight="16" prefWidth="16" style="-fx-background-color: #ffc107; -fx-border-color: white;" visible="false" />
        <Label fx:id="legendGoldLabel" layoutX="277.0" layoutY="610.0" text="Gold" textFill="white" visible="false" />
      <AnchorPane layoutX="10.0" layoutY="10.0" prefHeight="58.0" prefWidth="973.0">
         <children>
            <Label layoutX="423.0" layoutY="1.0" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: white;" text="CINEMA SCREEN" />
            <ImageView fitHeight="27.0" fitWidth="858.0" layoutX="163.0" layoutY="40.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../../../icon/screen.png" />
               </image>
            </ImageView>
         </children>
      </AnchorPane>

    </children>
</AnchorPane>
