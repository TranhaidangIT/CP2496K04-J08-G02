<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="510.0" prefWidth="550.0" stylesheets="@../../../css/app-style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.controllerManager.EditServiceController">
    <children>
        <AnchorPane layoutX="7.0" layoutY="5.0" prefHeight="500.0" prefWidth="540.0" styleClass="bg-white" stylesheets="@../../../css/manager.css">
            <children>
                <Label layoutX="194.0" layoutY="14.0" text="Edit Service" textFill="#aa0000">
                    <font><Font name="System Bold" size="24.0" /></font>
                </Label>

                <!-- Service Image -->
                <ImageView fx:id="imgService" fitHeight="115.0" fitWidth="131.0" layoutX="194.0" layoutY="49.0" pickOnBounds="true" preserveRatio="true" />

                <!-- Button to choose image -->
                <Button fx:id="btnChooseImage" layoutX="180.0" layoutY="170.0" onAction="#handleChooseImage" prefHeight="42.0" prefWidth="160.0" styleClass="btnChooseFile" text="Choose Image">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Button>

                <AnchorPane layoutX="60.0" layoutY="233.0" prefHeight="180.0" prefWidth="400.0" stylesheets="@../../../css/app-style.css">
                    <children>
                        <Label layoutX="35.0" layoutY="19.0" styleClass="labelCaption" text="Service Name:">
                            <font><Font size="16.0" /></font>
                        </Label>
                        <TextField fx:id="txtServiceName" layoutX="140.0" layoutY="6.0" prefHeight="40.0" prefWidth="250.0" styleClass="textField" />

                        <Label layoutX="69.0" layoutY="66.0" styleClass="labelCaption" text="Price ($):">
                            <font><Font size="16.0" /></font>
                        </Label>
                        <TextField fx:id="txtPrice" layoutX="140.0" layoutY="56.0" prefHeight="40.0" prefWidth="250.0" styleClass="textField" />

                        <Label layoutX="64.0" layoutY="120.0" styleClass="labelCaption" text="Category:">
                            <font><Font size="16.0" /></font>
                        </Label>
                        <ComboBox fx:id="cbCategory" layoutX="140.0" layoutY="108.0" prefHeight="40.0" prefWidth="250.0" styleClass="comboBox" />

                        <Label layoutX="49.0" layoutY="176.0" styleClass="labelCaption" text="Image Path:">
                            <font><Font size="16.0" /></font>
                        </Label>
                        <TextField fx:id="txtImagePath" editable="false" layoutX="140.0" layoutY="166.0" prefHeight="40.0" prefWidth="250.0" styleClass="textField" />
                    </children>
                </AnchorPane>

                <!-- Buttons -->
                <Button fx:id="btnCancel" layoutX="426.0" layoutY="453.0" mnemonicParsing="false" onAction="#handleCancel" prefHeight="35.0" prefWidth="100.0" styleClass="btnCancel" stylesheets="@../../../css/app-style.css" text="Cancel">
                    <font><Font size="16.0" /></font>
                </Button>

                <Button fx:id="btnDelete" layoutX="314.0" layoutY="453.0" mnemonicParsing="false" onAction="#handleDelete" prefHeight="35.0" prefWidth="100.0" styleClass="btnDelete" stylesheets="@../../../css/app-style.css" text="Delete">
                    <font><Font size="16.0" /></font>
                </Button>

                <Button fx:id="btnUpdate" layoutX="200.0" layoutY="453.0" mnemonicParsing="false" onAction="#handleUpdate" prefHeight="35.0" prefWidth="100.0" styleClass="btnEdit" stylesheets="@../../../css/app-style.css" text="Update">
                    <font><Font size="16.0" /></font>
                </Button>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
