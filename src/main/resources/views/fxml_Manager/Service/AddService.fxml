<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="510.0" prefWidth="550.0" stylesheets="@../../../css/app-style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.controllerManager.AddServiceController">
    <children>
        <AnchorPane layoutX="5.0" layoutY="5.0" prefHeight="500.0" prefWidth="540.0" styleClass="bg-white" stylesheets="@../../../css/manager.css">
            <children>
                <Label layoutX="174.0" layoutY="14.0" text="Add New Service" textFill="#aa0000">
                    <font>
                        <Font name="System Bold" size="24.0" />
                    </font>
                </Label>

                <!-- Service Image -->
                <ImageView fx:id="imgService" fitHeight="137.0" fitWidth="138.0" layoutX="201.0" layoutY="49.0" pickOnBounds="true" preserveRatio="true" />

                <!-- Button to choose image -->
                <Button fx:id="btnChooseImage" layoutX="197.0" layoutY="197.0" onAction="#handleChooseImage" prefHeight="42.0" prefWidth="146.0" styleClass="btnChooseFile" text="Choose Image">
                    <font>
                        <Font size="12.0" />
                    </font>
                </Button>

                <AnchorPane layoutX="70.0" layoutY="240.0" prefHeight="180.0" prefWidth="400.0" stylesheets="@../../../css/app-style.css">
                    <children>
                        <Label layoutX="27.0" layoutY="10.0" styleClass="labelCaption" text="Service Name:">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtServiceName" layoutX="140.0" layoutY="6.0" prefHeight="40.0" prefWidth="250.0" styleClass="textField" />

                        <Label layoutX="54.0" layoutY="66.0" styleClass="labelCaption" text="Price ($):">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtPrice" layoutX="140.0" layoutY="56.0" prefHeight="40.0" prefWidth="250.0" styleClass="textField" />

                        <Label layoutX="52.0" layoutY="120.0" styleClass="labelCaption" text="Category:">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>
                        <ComboBox fx:id="cbCategory" layoutX="140.0" layoutY="108.0" prefHeight="40.0" prefWidth="250.0" styleClass="comboBox" />

                        <Label layoutX="34.0" layoutY="170.0" styleClass="labelCaption" text="Image Path:">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>
                        <TextField fx:id="txtImagePath" editable="false" layoutX="140.0" layoutY="160.0" prefHeight="40.0" prefWidth="250.0" styleClass="textField" />
                    </children>
                </AnchorPane>

                <Button fx:id="btnCancel" layoutX="426.0" layoutY="450.0" mnemonicParsing="false" onAction="#handleCancel" prefHeight="35.0" prefWidth="100.0" styleClass="btnCancel" stylesheets="@../../../css/app-style.css" text="Cancel">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>

                <Button fx:id="btnInsert" layoutX="310.0" layoutY="450.0" mnemonicParsing="false" onAction="#handleInsert" prefHeight="35.0" prefWidth="100.0" styleClass="btnInsert" stylesheets="@../../../css/app-style.css" text="Insert">
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
            </children>
        </AnchorPane>
    </children>
</AnchorPane>
