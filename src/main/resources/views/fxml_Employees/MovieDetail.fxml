<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>

<AnchorPane prefHeight="768.0" prefWidth="1124.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.controllerEmployees.MovieDetailController">
    <children>
        <HBox spacing="30" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.bottomAnchor="20.0">

            <!-- Cột bên trái: Poster và thông tin chi tiết -->
            <VBox spacing="20" prefWidth="300" minWidth="280" maxWidth="350" alignment="TOP_CENTER">
                <!-- Poster container với alignment tốt hơn -->
                <VBox alignment="CENTER" spacing="10">
                    <ImageView fx:id="posterImage" fitHeight="320.0" fitWidth="220.0" preserveRatio="true"
                               style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 5, 0, 2, 2);" />
                </VBox>

                <!-- Thông tin chi tiết phim -->
                <VBox spacing="12" alignment="TOP_LEFT" style="-fx-padding: 10;">
                    <Label fx:id="titleLabel" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" wrapText="true" />

                    <VBox spacing="8">
                        <Label fx:id="genreLabel" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" />
                        <Label fx:id="durationLabel" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" />
                        <Label fx:id="languageLabel" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" />
                        <Label fx:id="ageRatingLabel" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" />
                        <Label fx:id="releaseDateLabel" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" />
                        <Label fx:id="directedByLabel" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" />
                    </VBox>
                </VBox>
            </VBox>

            <!-- Cột bên phải: Mô tả, phòng, suất chiếu, nút hành động -->
            <VBox spacing="25" HBox.hgrow="ALWAYS" alignment="TOP_LEFT">

                <!-- Mô tả phim -->
                <VBox spacing="8">
                    <Label text="Mô tả phim" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                    <TextArea fx:id="descriptionArea" editable="false"
                              prefHeight="180.0"
                              style="-fx-focus-color: transparent; -fx-faint-focus: transparent; -fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-size: 13px; -fx-text-fill: #495057;"
                              wrapText="true" />
                </VBox>

                <!-- Thông tin phòng chiếu -->
                <VBox spacing="8">
                    <Label text="Phòng chiếu" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                    <Label fx:id="roomLabel" style="-fx-font-size: 14px; -fx-text-fill: #495057; -fx-padding: 8 12; -fx-background-color: #e9ecef; -fx-background-radius: 5;" />
                </VBox>

                <!-- Suất chiếu -->
                <VBox spacing="8" VBox.vgrow="ALWAYS">
                    <Label text="Suất chiếu" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" />
                    <FlowPane fx:id="showtimePane" hgap="12" vgap="12"
                              style="-fx-padding: 10; -fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-border-color: #dee2e6; -fx-border-radius: 8;" />
                </VBox>

                <!-- Spacer để đẩy buttons xuống dưới -->
                <Region VBox.vgrow="ALWAYS" />

                <!-- Nút hành động -->
                <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 10 0 0 0;">
                    <Button fx:id="exitButton"
                            prefHeight="45.0" prefWidth="120.0"
                            styleClass="btnExit"
                            stylesheets="@../../css/app-style.css"
                            text="Thoát"
                            onAction="#handleExit" />
                    <Button fx:id="confirmButton"
                            prefHeight="45.0" prefWidth="120.0"
                            styleClass="btnAdd"
                            stylesheets="@../../css/app-style.css"
                            text="Xác nhận"
                            onAction="#handleConfirm" />
                </HBox>
            </VBox>
        </HBox>
    </children>
</AnchorPane>