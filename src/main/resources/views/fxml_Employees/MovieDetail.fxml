<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="768.0" prefWidth="1124.0" stylesheets="@../../css/app-style.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.controllerEmployees.MovieDetailController">
    <children>
        <HBox spacing="30" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">

            <!-- Left Column: Poster and Movie Details -->
            <VBox alignment="TOP_CENTER" maxWidth="350" minWidth="280" prefWidth="300" spacing="20">
                <!-- Poster container with better alignment -->
                <VBox alignment="CENTER" spacing="10">
                    <ImageView fx:id="posterImage" fitHeight="320.0" fitWidth="220.0" preserveRatio="true" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 5, 0, 2, 2);" />
                </VBox>

                <!-- Movie Details -->
                <VBox alignment="TOP_LEFT" spacing="12" style="-fx-padding: 10;">
                    <Label fx:id="titleLabel" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" wrapText="true" />

                    <VBox spacing="8">
                        <Label fx:id="genreLabel" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" />
                        <Label fx:id="durationLabel" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" />
                        <Label fx:id="languageLabel" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" />
                        <Label fx:id="ageRatingLabel" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" />
                        <Label fx:id="releaseDateLabel" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" />
                        <Label fx:id="directedByLabel" style="-fx-font-size: 14px; -fx-text-fill: #34495e;" />
                    </VBox>
                </VBox>
            </VBox>

            <!-- Right Column: Description, Room, Showtimes, Action Buttons -->
            <VBox alignment="TOP_LEFT" spacing="25" HBox.hgrow="ALWAYS">

                <!-- Movie Description -->
                <VBox spacing="8">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Movie Description" />
                    <TextArea fx:id="descriptionArea" editable="false" prefHeight="180.0" style="-fx-focus-color: transparent; -fx-faint-focus: transparent; -fx-background-color: #f8f9fa; -fx-border-color: #dee2e6; -fx-border-radius: 5; -fx-background-radius: 5; -fx-font-size: 13px; -fx-text-fill: #495057;" wrapText="true" />
                </VBox>

                <!-- Screening Room Info -->
                <VBox spacing="8">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Screening Room" />
                    <Label fx:id="roomLabel" prefHeight="36.0" prefWidth="163.0" style="-fx-font-size: 14px; -fx-text-fill: #495057; -fx-padding: 8 12; -fx-background-color: #e9ecef; -fx-background-radius: 5;" />
                </VBox>

                <!-- Showtimes -->
                <VBox spacing="8" VBox.vgrow="ALWAYS">
                    <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Showtimes" />
                    <FlowPane fx:id="showtimePane" hgap="12" style="-fx-padding: 10; -fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-border-color: #dee2e6; -fx-border-radius: 8;" vgap="12" />
                </VBox>

                <!-- Spacer to push buttons to the bottom -->
                <Region VBox.vgrow="ALWAYS" />

                <!-- Action Buttons -->
                <HBox alignment="CENTER_RIGHT" spacing="15" style="-fx-padding: 10 0 0 0;">
                    <Button fx:id="exitButton" onAction="#handleExit" prefHeight="45.0" prefWidth="120.0" styleClass="btnCancel" stylesheets="@../../css/app-style.css" text="Exit" />
                    <Button fx:id="confirmButton" onAction="#handleConfirm" prefHeight="45.0" prefWidth="120.0" styleClass="btnInsert" stylesheets="@../../css/app-style.css" text="Confirm" />
                </HBox>
            </VBox>
        </HBox>
    </children>
</AnchorPane>
