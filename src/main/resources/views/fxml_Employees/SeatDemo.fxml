<AnchorPane prefHeight="768.0" prefWidth="1124.0" style="-fx-background-color: #f8f9fa;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.controllerEmployees.SeatDemoController">
    <VBox layoutX="140.0" layoutY="64.8" prefHeight="576.0" prefWidth="890.0" spacing="20" AnchorPane.bottomAnchor="147.0" AnchorPane.leftAnchor="120.0" AnchorPane.rightAnchor="147.0" AnchorPane.topAnchor="45.0">

        <!-- Header Section -->
        <VBox prefHeight="141.0" prefWidth="850.0" spacing="10" style="-fx-background-color: white; -fx-background-radius: 12px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 8, 0, 0, 2);">
            <padding>
                <Insets bottom="20.0" left="25.0" right="25.0" top="20.0" />
            </padding>

            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Cinema Seat Selection - Demo Mode" />

            <Label fx:id="messageLabel" style="-fx-font-size: 16px; -fx-text-fill: #e74c3c; -fx-background-color: #fdf2f2; -fx-background-radius: 8px; -fx-padding: 15px; -fx-border-color: #e74c3c; -fx-border-width: 1px; -fx-border-radius: 8px;" text="No showtime selected. Please select a movie and showtime first." />

            <!-- Seat Statistics -->
            <HBox alignment="CENTER_LEFT" spacing="30">
                <Label fx:id="totalSeatsLabel" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #34495e;" text="Total Seats: 100" />
                <Label fx:id="availableSeatsLabel" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #27ae60;" text="Available: 85" />
            </HBox>
        </VBox>

        <!-- Cinema Screen Section -->
        <VBox prefHeight="359.0" prefWidth="850.0" spacing="15" style="-fx-background-color: white; -fx-background-radius: 12px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 8, 0, 0, 2);">
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </padding>

            <HBox alignment="CENTER" spacing="10">
                <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="🎬 CINEMA SCREEN 🎬" />
            </HBox>

            <HBox alignment="CENTER">
                <Rectangle arcHeight="15.0" arcWidth="15.0" fill="linear-gradient(to right, #3498db, #2980b9)" height="15.0" style="-fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 5, 0, 0, 2);" width="800.0" />
            </HBox>

            <!-- Seating Grid -->
            <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color:transparent;">
                <content>
                    <GridPane fx:id="seatGrid" alignment="CENTER" hgap="8" prefHeight="398.0" prefWidth="798.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 10px; -fx-padding: 20px;" vgap="8" />
                </content>
            </ScrollPane>

        </VBox>

    </VBox>
     <Button fx:id="backButton" layoutX="779.0" layoutY="619.0" onAction="#handleBack" prefHeight="50.0" prefWidth="200.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-size: 16px; -fx-font-weight: bold; -fx-background-radius: 10px; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);" text="← Back to Movies" />

        <!-- Legend Section -->
     <HBox alignment="CENTER" layoutX="145.0" layoutY="614.0" prefHeight="67.0" prefWidth="624.0" spacing="40" style="-fx-background-color: white; -fx-background-radius: 12px; -fx-padding: 20px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 8, 0, 0, 2);">

            <!-- Standard Seats Legend -->
         <HBox alignment="CENTER" spacing="8">
             <Rectangle arcHeight="8.0" arcWidth="8.0" fill="#FF6B9D" height="25.0" style="-fx-stroke: #34495e; -fx-stroke-width: 2;" width="25.0" />
             <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Standard" />
         </HBox>

            <!-- VIP Seats Legend -->
         <HBox alignment="CENTER" spacing="8">
             <Rectangle arcHeight="8.0" arcWidth="8.0" fill="#3498DB" height="25.0" style="-fx-stroke: #34495e; -fx-stroke-width: 2;" width="25.0" />
             <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="VIP" />
         </HBox>

            <!-- Sweet Box Legend -->
         <HBox alignment="CENTER" spacing="8">
             <Rectangle arcHeight="8.0" arcWidth="8.0" fill="#E74C3C" height="25.0" style="-fx-stroke: #34495e; -fx-stroke-width: 2;" width="25.0" />
             <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Sweet Box" />
         </HBox>

            <!-- Occupied Seats Legend -->
         <HBox alignment="CENTER" spacing="8">
             <Rectangle arcHeight="8.0" arcWidth="8.0" fill="#7f8c8d" height="25.0" style="-fx-stroke: #95a5a6; -fx-stroke-width: 2; -fx-opacity: 0.6;" width="25.0" />
             <Label style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #7f8c8d;" text="Occupied" />
         </HBox>
     </HBox>

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</AnchorPane>
