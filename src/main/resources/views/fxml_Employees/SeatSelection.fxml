            </HBox>
        </VBox>

        <!-- Cinema Screen Section -->
        <VBox prefHeight="476.0" prefWidth="1117.0" spacing="15" style="-fx-background-color: white; -fx-background-radius: 12px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 8, 0, 0, 2);">
            <padding>
                <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
            </padding>

            <!-- Màn hình cong với Arc -->
            <AnchorPane prefHeight="58.0" prefWidth="973.0">
