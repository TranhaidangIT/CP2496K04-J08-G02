    <VBox layoutX="51.0" layoutY="54.0" prefHeight="627.0" prefWidth="1117.0" spacing="20" AnchorPane.bottomAnchor="86.8" AnchorPane.leftAnchor="51.0" AnchorPane.rightAnchor="50.6" AnchorPane.topAnchor="54.0">
