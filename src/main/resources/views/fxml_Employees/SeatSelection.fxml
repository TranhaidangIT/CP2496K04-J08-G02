                  <Image url="@../../icon/screen.png" />
               </image>
            </ImageView>
            </AnchorPane>

            <ScrollPane fitToHeight="true" fitToWidth="true" prefHeight="383.0" prefWidth="1067.0" style="-fx-background-color: transparent;">
                <content>
                    <GridPane fx:id="seatGrid" alignment="CENTER" hgap="8" prefHeight="380.0" prefWidth="1066.0" style="-fx-background-color: #f8f9fa; -fx-background-radius: 10px; -fx-padding: 20px;" vgap="8" />
                </content>
            </ScrollPane>
        </VBox>
    </VBox>

