<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:controller="controllerAdmin.MovieCardController" alignment="TOP_CENTER" prefHeight="250.0" prefWidth="180.0" styleClass="movie-card" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <ImageView fx:id="movieImageView" fitHeight="180.0" fitWidth="160.0" pickOnBounds="true" preserveRatio="true">
            <VBox.margin>
                <Insets bottom="5.0" />
            </VBox.margin>
        </ImageView>
        <Label fx:id="movieNameLabel" text="Movie Name" wrapText="true">
            <font>
                <Font name="System Bold" size="14.0" />
            </font>
            <VBox.margin>
                <Insets left="5.0" right="5.0" />
            </VBox.margin>
        </Label>
        <Label fx:id="genreLabel" text="Genre">
            <font>
                <Font size="12.0" />
            </font>
            <VBox.margin>
                <Insets left="5.0" right="5.0" top="2.0" />
            </VBox.margin>
        </Label>
        <Label fx:id="durationLabel" text="Duration">
            <font>
                <Font size="12.0" />
            </font>
            <VBox.margin>
                <Insets left="5.0" right="5.0" top="2.0" />
            </VBox.margin>
        </Label>
    </children>
    <padding>
        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
    </padding>
</VBox>